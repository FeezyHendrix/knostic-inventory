{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "db:make": "knex migrate:make",
    "seed": "ts-node src/seeds/seed.ts",
    "docker:build": "docker build -t inventory-api .",
    "docker:dev": "docker-compose up postgres api-dev",
    "docker:prod": "docker-compose --profile production up postgres api",
    "docker:migrate": "docker-compose --profile migrate up migrate",
    "docker:seed": "docker-compose --profile seed up seed",
    "docker:setup": "docker-compose --profile migrate --profile seed up migrate seed",
    "docker:pgadmin": "docker-compose --profile pgadmin up postgres pgadmin",
    "docker:down": "docker-compose down",
    "docker:clean": "docker-compose down -v --rmi all",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
